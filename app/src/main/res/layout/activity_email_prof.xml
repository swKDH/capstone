<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EmailProfActivity"
    android:background="#E2E2E2"
    >

    <TextView
        android:id="@+id/school_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:text="이메일 인증번호"
        />
    <LinearLayout
        android:id="@+id/email_prof"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/school_text">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_board"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:padding="5sp"
            android:layout_margin="10dp"
            android:textColorHint="#B2B2B2"
            android:hint="인증번호"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/email_prof"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/submit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확인"
            android:textColor="@color/black"
            android:backgroundTint="#DCEBFF"/>
    </LinearLayout>
</RelativeLayout>